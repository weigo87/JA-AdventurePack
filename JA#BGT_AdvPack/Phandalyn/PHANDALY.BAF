IF
	OnCreation()
	IsActive(Myself)
	Global("JA#PHANDA","GLOBAL",0)
THEN
	RESPONSE #100
		Deactivate(Myself)
END


IF
	Global("JA#PHANDA","GLOBAL",1)
	!IsActive(Myself)
THEN
	RESPONSE #100
		Activate(Myself)
		SetGlobal("JA#PHANDA","GLOBAL",2)
END

IF
	NumTimesTalkedToGT(0)
	InParty([0.0.0.0.0.0.MASK_EVIL])
	See([PC.0.0.0.0.0.MASK_EVIL])
THEN
	RESPONSE #100
		Dialogue([PC])
END

