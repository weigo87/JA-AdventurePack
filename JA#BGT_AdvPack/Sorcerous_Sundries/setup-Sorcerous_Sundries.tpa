	SAY NAME2 @9

COPY ~JA#BGT_AdvPack/Sorcerous_Sundries/JA#SSELF.CRE~ ~override~
	SAY NAME1 @10
	SAY NAME2 @10
	WRITE_ASCII 0x248 ~None~ #8

