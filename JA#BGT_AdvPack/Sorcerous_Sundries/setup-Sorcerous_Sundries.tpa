COMPILE ~JA#BGT_AdvPack/Sorcerous_Sundries/JA#HLBZ1.BAF~

COPY_EXISTING ~%EBaldursGate_SorcerousSundries_L1%.ARE~ ~override~
	PATCH_IF (SOURCE_SIZE > 0x11b) BEGIN 
		READ_SHORT 0xbc "JA#OFF_SNG"
		WRITE_SHORT "JA#OFF_SNG"	~0~
		WRITE_SHORT "JA#OFF_SNG" + 0x4	~0~
	END
BUT_ONLY

COPY_EXISTING ~HALBAZ.CRE~ ~override~
	WRITE_BYTE 0x2e 37 //color
	WRITE_ASCII 0x268 ~JA#HLBZ1~	#8
	REPLACE_CRE_ITEM ~CLCK16~ #0 #0 #0 ~IDENTIFIED~ ~ARMOR~ EQUIP


COPY ~JA#BGT_AdvPack/Sorcerous_Sundries/JA#TAY01.CRE~ ~override~
	SAY NAME1 @6
	SAY NAME2 @7

COPY ~JA#BGT_AdvPack/Sorcerous_Sundries/JA#SSC01.CRE~ ~override~
